# GoEdu Omicron Banking Platform - Environment Configuration
# 
# Development environment variables for the Vue.js frontend application.
# Copy this file to .env.local and customize values for your local development.
# 
# Security Note: Never commit actual production values to version control.
# Use environment-specific files (.env.production, .env.staging) for deployments.

# =============================================================================
# API Configuration
# =============================================================================

# Backend API base URL
VITE_API_BASE_URL=http://localhost:3000/api

# GraphQL endpoint
VITE_GRAPHQL_URI=http://localhost:4000/graphql

# WebSocket endpoint for real-time features
VITE_WS_URL=ws://localhost:3000/ws

# =============================================================================
# Application Configuration
# =============================================================================

# Application environment (development, staging, production)
VITE_APP_ENV=development

# Application name and version
VITE_APP_NAME="GoEdu Omicron Banking Platform"
VITE_APP_VERSION="1.0.0"

# Base URL for the application (used by Vue Router)
VITE_BASE_URL=/

# =============================================================================
# Authentication & Security
# =============================================================================

# JWT token expiration time (in seconds)
VITE_TOKEN_EXPIRES_IN=3600

# Session timeout (in milliseconds)
VITE_SESSION_TIMEOUT=1800000

# Maximum login attempts before lockout
VITE_MAX_LOGIN_ATTEMPTS=5

# =============================================================================
# Banking Compliance Features
# =============================================================================

# Enable audit trail logging
VITE_ENABLE_AUDIT_TRAIL=true

# Enable real-time compliance monitoring
VITE_ENABLE_COMPLIANCE_MONITORING=true

# Default compliance framework (SOX, Basel_III, GDPR, PCI_DSS)
VITE_DEFAULT_COMPLIANCE_FRAMEWORK=SOX

# =============================================================================
# File Upload & Storage
# =============================================================================

# Maximum file upload size (in bytes)
VITE_MAX_FILE_SIZE=10485760

# Allowed file types for control documentation
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,txt,jpg,jpeg,png

# File storage service URL (MinIO/S3 compatible)
VITE_FILE_STORAGE_URL=http://localhost:9000

# =============================================================================
# Performance & Monitoring
# =============================================================================

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Analytics tracking ID (Google Analytics, etc.)
VITE_ANALYTICS_ID=

# Error reporting service URL (Sentry, etc.)
VITE_ERROR_REPORTING_URL=

# =============================================================================
# UI/UX Configuration
# =============================================================================

# Default theme (light, dark, auto)
VITE_DEFAULT_THEME=light

# Default language (en, es, fr, de)
VITE_DEFAULT_LANGUAGE=en

# Enable dark mode toggle
VITE_ENABLE_DARK_MODE=true

# Default items per page for data tables
VITE_DEFAULT_PAGE_SIZE=25

# =============================================================================
# Banking Data Configuration
# =============================================================================

# Default currency for financial displays
VITE_DEFAULT_CURRENCY=USD

# Number of decimal places for monetary values
VITE_CURRENCY_DECIMAL_PLACES=2

# Default date format (ISO, US, EU)
VITE_DATE_FORMAT=ISO

# Default timezone
VITE_DEFAULT_TIMEZONE=UTC

# =============================================================================
# Development Tools
# =============================================================================

# Enable Vue DevTools in production (not recommended)
VITE_ENABLE_DEVTOOLS=false

# Enable debug logging
VITE_DEBUG_LOGGING=true

# Mock API responses (useful for development)
VITE_MOCK_API=false

# =============================================================================
# Testing Configuration
# =============================================================================

# Test environment API URL
VITE_TEST_API_URL=http://localhost:3001/api

# Enable test mode features
VITE_TEST_MODE=false

# Cypress testing configuration
VITE_CYPRESS_BASE_URL=http://localhost:5173
