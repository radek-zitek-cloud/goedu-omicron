# GoEdu Control Testing Platform - Environment Variables Template
# Copy this file to .env and customize for your environment

# Application Configuration
GOEDU_APP_NAME="GoEdu Control Testing Platform"
GOEDU_APP_VERSION="1.0.0"
GOEDU_APP_ENVIRONMENT="development"
GOEDU_APP_PORT=8080
GOEDU_APP_HOST="0.0.0.0"
GOEDU_APP_TIMEOUT="30s"

# Database Configuration (MongoDB)
GOEDU_DATABASE_URI="mongodb://localhost:27017"
GOEDU_DATABASE_DATABASE="goedu"
GOEDU_DATABASE_MAX_POOL_SIZE=100
GOEDU_DATABASE_MIN_POOL_SIZE=10
GOEDU_DATABASE_MAX_CONN_IDLE_TIME="5m"
GOEDU_DATABASE_CONNECT_TIMEOUT="10s"
GOEDU_DATABASE_SERVER_SELECT_TIMEOUT="10s"

# Cache Configuration (Redis)
GOEDU_CACHE_HOST="localhost"
GOEDU_CACHE_PORT=6379
GOEDU_CACHE_PASSWORD=""
GOEDU_CACHE_DATABASE=0
GOEDU_CACHE_MAX_RETRIES=3
GOEDU_CACHE_POOL_SIZE=10
GOEDU_CACHE_DIAL_TIMEOUT="5s"
GOEDU_CACHE_READ_TIMEOUT="3s"
GOEDU_CACHE_WRITE_TIMEOUT="3s"
GOEDU_CACHE_IDLE_TIMEOUT="5m"

# Object Storage Configuration (MinIO)
GOEDU_STORAGE_ENDPOINT="localhost:9000"
GOEDU_STORAGE_ACCESS_KEY_ID="minioadmin"
GOEDU_STORAGE_SECRET_ACCESS_KEY="minioadmin"
GOEDU_STORAGE_BUCKET_NAME="goedu-evidence"
GOEDU_STORAGE_REGION="us-east-1"
GOEDU_STORAGE_USE_SSL=false

# Authentication Configuration
GOEDU_AUTH_JWT_SECRET="your-secret-key-change-in-production"
GOEDU_AUTH_JWT_EXPIRATION="24h"
GOEDU_AUTH_BCRYPT_COST=12

# OAuth Configuration (optional)
GOEDU_AUTH_OAUTH_PROVIDER=""
GOEDU_AUTH_OAUTH_CLIENT_ID=""
GOEDU_AUTH_OAUTH_CLIENT_SECRET=""
GOEDU_AUTH_OAUTH_REDIRECT_URL=""

# Logging Configuration
GOEDU_LOGGER_LEVEL="info"
GOEDU_LOGGER_ENVIRONMENT="development"
GOEDU_LOGGER_OUTPUT_PATH="stdout"

# Email Configuration
GOEDU_EMAIL_PROVIDER="smtp"
GOEDU_EMAIL_API_KEY=""
GOEDU_EMAIL_FROM="noreply@goedu.com"
GOEDU_EMAIL_SMTP_HOST="localhost"
GOEDU_EMAIL_SMTP_PORT=587
GOEDU_EMAIL_SMTP_USERNAME=""
GOEDU_EMAIL_SMTP_PASSWORD=""

# Webhook Configuration
GOEDU_WEBHOOK_SECRET=""
GOEDU_WEBHOOK_TIMEOUT="30s"
GOEDU_WEBHOOK_RETRY_COUNT=3
GOEDU_WEBHOOK_RETRY_DELAY="5s"

# Monitoring Configuration
GOEDU_MONITORING_ENABLED=true
GOEDU_MONITORING_METRICS_PATH="/metrics"
GOEDU_MONITORING_HEALTH_CHECK_PATH="/health"
GOEDU_MONITORING_PROMETHEUS_ENABLED=true

# CORS Configuration (comma-separated values)
GOEDU_APP_CORS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"
GOEDU_APP_CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
GOEDU_APP_CORS_ALLOWED_HEADERS="Authorization,Content-Type,X-Correlation-ID"